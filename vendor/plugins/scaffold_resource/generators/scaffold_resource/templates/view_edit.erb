<%% content_for :title do %>
	<h1><strong>Edição de <%= singular_name.titleize %></strong></h1>
<%% end %>

<%%= error_messages_for :<%= singular_name %> %>

<%% form_for(:<%= singular_name %>, :url => resource_url, :html => { :method => :put }) do |f| %>
  <%%= render :partial => "form", :locals => { :f => f } %>

	<div class="buttons clear">
		<%%= f.submit 'Salvar' %> ou <%%= link_to 'Voltar para Lista', collection_url, :class=>'link' %>
	</div>
<%% end %>

