<%% content_for :title do %>
	<h1><strong><%= plural_name.titleize %></strong></h1>
	<%%= cool_button('Novo <%= singular_name.titleize %>', new_resource_url) %>
<%% end %>

<table class="lista" cellpadding="0" cellspacing="0" width="100%">
  <tr>
<% for attribute in attributes -%>
    <th><%= attribute.column.human_name %></th>
<% end -%>
  </tr>
  <%%- @<%= plural_name %>.each do |<%= singular_name %>|%>
  <tr <%%= cycle('', 'class="even"') %>>
    <td width="100%"><%%= <%= singular_name %>.nome %></td>
    <%- for attribute in attributes -%>
      <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <%- end -%>    
      <td><%%=link_to 'Editar', edit_resource_url(<%= singular_name %>), :class=>'link' %></td>
      <td><%%=link_to image_tag('trash.gif'), resource_url(<%= singular_name %>), :confirm => 'Tem certeza?', :method => :delete %></td>
    </tr>
  <%% end %>
</table>
<br/>
